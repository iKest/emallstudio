{
    "extends": ["airbnb-standard", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "APP_URL": true,
        "GAME_HEIGHT": true,
        "GAME_WIDTH": true,
        "ASSETS_PATH": true,
        "Bundle": true,
        "BUNDLE": true,
        "POLYFILL": true,
        "EXTERNAL": true
    },
    "rules": {
        "camelcase": ["error", {"allow": ["^next_", "^enter_", "^exit_"]}],
        "import/prefer-default-export": "off",
        "no-bitwise": ["error", {
            "int32Hint": true
        }],
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-underscore-dangle": ["error", {
            "allowAfterThis": true,
            "enforceInMethodNames": false
        }],
        "prefer-destructuring": ["error", {
            "AssignmentExpression": {
                "array": false
            }
        }],
        "consistent-return": ["error", {
            "treatUndefinedAsUnspecified": true
        }],
        "prettier/prettier": ["error"]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true
    }
}
